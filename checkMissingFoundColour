bool checkMissing(int posX, int posY, char*prevPositions) {
	bool found = false;
	moveToSquare(posX, posY);
	moveDownTilTouch();
	if (SensorValue[S1] == 0 && prevPositions[posX][posY] != '.') { //the piece is not there
		found = true;	
	}
	return found;
}

bool checkFound(int posX, int posY, char&prevPositions){
	bool found = false;
	moveToSquare(posX, posY);
	moveDownTilTouch();
	if (SensorValue[S1] == 1 && prevPositions[posX][posY] == '.') { //the piece was previously there
		found = true;	
	} else if (SensorValue[S1] == 1){ //check colour of the piece
		if (checkUserPiece(S2))
			found = true;
	}
	return found;
}

bool checkUserPiece(tSensor colourSens) {
	//assume user is already in the correct piece position
	//move some distance up to measure colour
	float moveDist = 3.3; //3.3 cm
	float moveUp = 0.5;
	bool isUsers = false;
	moveDistanceNeg(motorC, moveUp, z_wheel_size); 
	moveDistancePos(motorA, moveDist, wheel_size);
	
	if (SensorValue[colourSens] == colorRed) { //piece is a user piece
		isUsers = true;
	}
	//undo movements
	moveDistanceNeg(motorA, moveDist, wheel_size); 
	moveDistancePos(motorC, moveUp, wheel_size);

	return isUsers;
	
}

